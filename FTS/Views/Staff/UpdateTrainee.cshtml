@model FTS.Models.UserEntity

@{
    ViewBag.Title = "Update Trainee";
}

<h1 class="text-center" style="font-size: 55px; font-weight: 300;">UPDATE TRAINEE</h1>
<div class="mt-6 ml-6 mr-6">
    @using (Html.BeginForm("UpdateTrainee", "Staff", FormMethod.Post, new { @class = "form-horizontal", role = "form"}))
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary("", new { @class = "text-danger" })

        @Html.HiddenFor(m => m.Id)

        @Html.HiddenFor(m => m.Email)

        @Html.HiddenFor(m => m.Role)

        @Html.HiddenFor(m => m.UserName)

        @Html.HiddenFor(m => m.PasswordHash)

        @Html.HiddenFor(m => m.SecurityStamp)

        <div class="form-group">
            @Html.LabelFor(m => m.Name, new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Age, new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Age, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.DOB, new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.DOB, new { @class = "form-control", type = "date" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Education, new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Education, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.MainProgrammingLanguage, new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.MainProgrammingLanguage, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.TOEIC, new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.TOEIC, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Experience, new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Experience, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Department, new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Department, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Location, new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Location, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">            
            <div class="col-sm-10">         
                <select id="UserRoles" name="UserRoles" hidden>
                    <option id="Staff" selected="true" value="Trainee">Trainee</option>
                </select>
            </div>
        </div>

        @Html.TextBoxFor(m => m.Role, new { @class = "form-control", Value = "Trainee", type = "hidden" })

        <button type="submit" class="btn btn-primary" style="margin-right: 15px">Update</button>

        <a href="@Url.Action("AllTrainees")" type="button" class="btn btn-primary">Cancel</a>

    }

</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
