@model FTS.Models.UserEntity

@{
    ViewBag.Title = "Update Password";
}

<h1 class="text-center" style="font-size: 55px; font-weight: 300;">UPDATE PASSWORD</h1>
<div class="mt-6 ml-6 mr-6">
    @using (Html.BeginForm(FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary("", new { @class = "text-danger" })

        @Html.HiddenFor(m => m.Id)

        @Html.HiddenFor(m => m.Email)

        @Html.HiddenFor(m => m.Role)

        @Html.HiddenFor(m => m.UserName)

        <div class="form-group row">
            <label class="col-sm-2 col-form-label">New Password</label>
            <div class="col-sm-10">
                <input class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Confirm Password</label>
            <div class="col-sm-10">
                <input class="form-control" />
            </div>
        </div>

        <button type="submit" class="btn btn-primary" style="margin-right: 15px">Update</button>

        <a href="@Url.Action("AllStaffs")" type="button" class="btn btn-primary">Cancel</a>

    }

</div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
