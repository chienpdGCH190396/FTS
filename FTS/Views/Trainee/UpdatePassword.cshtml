@model FTS.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Update Password";
}

<h1 class="text-center" style="font-size: 55px; font-weight: 300;">UPDATE PASSWORD</h1>
<div class="mt-6 ml-6 mr-6">
    @using (Html.BeginForm("UpdatePassword", "Trainee", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(m => m.OldPassword, new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-10">
                @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.NewPassword, new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-10">
                @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-10">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            </div>
        </div>

        <button type="submit" class="btn btn-primary" style="margin-right: 15px">Update</button>

        <a href="@Url.Action("Index","Trainee")" type="button" class="btn btn-primary">Cancel</a>

    }

</div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
