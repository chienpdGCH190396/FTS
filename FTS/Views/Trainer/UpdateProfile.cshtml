@model FTS.Models.UserEntity

@{
    ViewBag.Title = "Update Profile";
}

<h1 class="text-center" style="font-size: 55px; font-weight: 300;">UPDATE PROFILE</h1>
<div class="mt-6 ml-6 mr-6">
    @using (Html.BeginForm("UpdateProfile", "Trainer", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        <div class="form-group">
            @Html.LabelFor(m => m.Name, new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Education, new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Education, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.WorkingPlace, new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.WorkingPlace, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Telephone, new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Telephone, new { @class = "form-control" })
            </div>
        </div>

        @Html.TextBoxFor(m => m.Role, new { @class = "form-control", Value = "Trainer", type = "hidden" })

        <button type="submit" class="btn btn-primary" style="margin-right: 15px">Update</button>

        <a href="@Url.Action("Index")" type="button" class="btn btn-primary">Cancel</a>

     }

</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
